<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bpoint.gameroom">

    <!-- 게임방 리스트 조회 -->
    <select id="selectAll" resultType="gameRoomResponseDTO">
        select * from game_room order by created_at
    </select>

    <!-- 게임방 상세 조회 -->
    <select id="selectById" parameterType="String" resultType="gameRoomResponseDTO">
        select * from game_room where uid = #{roomId}
    </select>

    <!-- 게임방 생성 -->
    <insert id="insert" parameterType="gameRoomRequestDTO">
        insert into game_room(uid, game_uid, host_uid, title, min_bet)
        values(#{roomId}, #{gameId}, #{userId}, #{title}, #{minBet})
    </insert>

    <!-- 게임방 수정 -->
    <update id="update" parameterType="gameRoomRequestDTO">
        update game_room set
        game_uid = #{gameId},
        title = #{title}
        where uid = #{roomId}
    </update>

    <!-- 게임방 삭제 -->
    <delete id="delete" parameterType="String">
        delete from game_room where uid = #{roomId}
    </delete>

</mapper>